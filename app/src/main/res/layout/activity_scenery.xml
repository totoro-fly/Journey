<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.totoro_fly.journey.SceneryActivity"
    >

    <LinearLayout
        android:id="@+id/scenery_activity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/scenery_imageview_scenery_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            tools:src="@drawable/changcheng"/>

        <TextView
            android:id="@+id/scenery_titel_textview_scenery_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="8dp"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:text="titel"
            />

        <TextView
            android:id="@+id/scenery_content_textview_scenery_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:textSize="18sp"
            tools:text="content"
            />
    </LinearLayout>
</ScrollView>
